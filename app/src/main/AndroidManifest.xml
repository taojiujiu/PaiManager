<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pgyer.paimanager.paimanager" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 添加sdcard权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!-- 在SDCard中创建与删除文件权限 -->
    <use-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <use-permission android:name="android.permission.RESTART_PACKAGES"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/pai_icon"
        android:label="@string/app_name"

        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
